<form id="addToSlidersOrBannersForm" action="{{ path('dashboard_add_product_to_sliders_or_banners_submit') }}">
	<input type="hidden" name="product" value="{{product_id}}">
	<div>
		<img src="{{ asset('uploads/products/images/') }}{{ product.image }}" width="100" height="80" class="text-right" style="float: right;">
	</div>	
	<h3>{{product_name}}</h3>
	<br>
	<div class="sliders-bloc" style="margin-top: 33px;">
		Sélectionner un slider
		<select name="slider" class="form-control">
			<option value="0">Séléctionner un slider</option>
			{% for liste in listes %}
			    {% if(liste.slider) %}
			    	<option value="{{liste.id_list}}">{{liste.name}}</option>
			    {% endif %}
		    {% endfor %}
		</select>
	</div>
	<br>
	<div class="banners-bloc">
		Sélectionner un Bannière
		<select name="banner" class="form-control">
			<option value="0">Séléctionner une bannière</option>
		    {% for liste in listes %}
			    {% if(liste.banner) %}
			    	<option value="{{liste.id_list}}">{{liste.name}}</option>
			    {% endif %}
		    {% endfor %}
		</select>
	</div>
	<br>
	<button type="submit" class="btn-primary btn-sm addToSlidersbutton">Enregistrer</button>
</form>