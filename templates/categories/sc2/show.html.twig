{% extends "layoutAdmin.html.twig" %}
{% block stylesheets %}
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/select2/select2.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/jquery-tags-input/jquery.tagsinput.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/typeahead/typeahead.css') }}">
    <!-- END PAGE LEVEL STYLES -->
    <style type="text/css">
        .highlight{
            border: 1px solid #ff0018 !important;
            background-color: #ff6c7a !important;
            position: relative;
            display: block;
            height: 97px;
        }
        .hidden{
            display: none;
        }
    </style>
{% endblock %}
{% block title %}Tableau de bord | {{categorie.name}}{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{ categorie.name }} <small>Détails</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_categories_index') }}">Catégories</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="#">{{ categorie.name }}</a>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                {{ categorie.name }}
                            </div>
                            <div class="tools">
                                <a href="{{ path('dashboard_categories_index') }}" style="color: #FFF;font-size: 14px;" title="ajouter une catégorie">
                                    <i class="fa fa-list-ul"></i> Tous
                                </a>
                                <a href="{{ path('dashboard_categories_edit', {id : categorie.id}) }}" style="color: #FFF;font-size: 14px;" title="Modifier">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                                <form action="#" class="form-horizontal form-bordered">
                                    <div class="form-body">
                                        <div class="text-right">
                                            <div class="form-group">
                                                <label class="control-label col-md-9"><b style="font-size: 18px;">Afficher les banniéres des produits dans la page d'acceuil ?</b></label>
                                                <div class="col-md-3">
                                                    <input type="checkbox" {{ categorie.hasBanner == 1?'checked':'' }} id="InIndex" value="{{ categorie.id }}" class="make-switch" data-size="large" data-on-text="&nbsp;Oui&nbsp;" data-off-text="&nbsp;Non&nbsp;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                    
                            
                            <div class="row">
                                <div class="col-md-3">
                                    <h1>{{ categorie.name }}</h1>
                                </div>
                                <div class="col-md-3">
                                    <input type="checkbox" id="show_products" data-id="{{categorie.id}}" {{categorie.show_products != null and categorie.show_products == 1 ? 'checked' : ''}}> Affichier les produits dans l'acceuil
                                </div>
                                <div class="col-md-3">
                                    <input type="checkbox" id="show_banners" data-id="{{categorie.id}}" {{categorie.show_banners != null and categorie.show_banners == 1 ? 'checked' : ''}}> Affichier les bannières dans l'acceuil
                                </div>
                                <div class="col-md-3">
                                    <a href="{{ path('dashboard_sc2_banners', {id : categorie.id}) }}" class="btn btn-primary" style="float: right;">Bannières</a>
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <hr>
                                        <h3>Produits</h3>
                                        <table class="table table-striped table-hover" id="zero_config" data-url="{{ path('dashboard_product_order_in_categorie') }}">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        image
                                                    </th>
                                                    <th>
                                                        Nom
                                                    </th>
                                                    <th>
                                                        Prix
                                                    </th>
                                                    <th>
                                                        Prix en promotion
                                                    </th>
                                                    <th>
                                                        matchand
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for produit in products %}
                                                    <tr id="listItem_{{ produit.id }}" data-id="{{ produit.id }}">
                                                        <td><img src="{{ asset('uploads/products/images/') }}{{ produit.image }}" width="100" height="80"></td>
                                                        <td>{{produit.name}}</td>
                                                        <td>{{produit.price}} TND </td>
                                                        <td>{{produit.pricePromotion?produit.pricePromotion~' TND':'-'}}</td>
                                                        <td>{{produit.store_name}}</td>
                                                        <td>
                                                            <a href="{{ path('dashboard_product_details', {id : produit.id}) }}" class="btn btn-sm btn-primary"><i class="fa fa-search"></i> Détails</a>
                                                            <a href="{{ path('dashboard_product_back_edit', {id : produit.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i> Modifier</a>
                                                            <button type="button" class="btn btn-primary btn-sm addToSliderOrBannersButton" data-id="{{produit.id}}" data-name="{{produit.name}}" data-url="{{ path('dashboard_add_product_to_sliders_or_banners_modal') }}" data-toggle="modal" data-target="#myModalProductSliderBanner"><i class="fa fa-photos"></i> slider ou bannière</button>
                                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal{{produit.id}}"><i class="fa fa-trash"></i> Supprimer</button>
                                                            
                                                            <!-- Modal -->
                                                            <div id="myModal{{produit.id}}" class="modal fade" role="dialog">
                                                              <div class="modal-dialog">

                                                                <!-- Modal content-->
                                                                <div class="modal-content">
                                                                  <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    <h4 class="modal-title">Suppression</h4>
                                                                  </div>
                                                                  <div class="modal-body">
                                                                    <p>Etes-vous sùre de vouloir supprimer le produit {{produit.name}} ?</p>
                                                                  </div>
                                                                  <div class="modal-footer">
                                                                      <a href="{{path('dashboard_product_delete', {id:produit.id})}}"></a>
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                                                  </div>
                                                                </div>

                                                              </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- Modal -->
    <div id="myModalProductSliderBanner" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Ajout du produit dans slider ou bannière</h4>
          </div>
          <div class="modal-body">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
          </div>
        </div>

      </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}
    
    <script>
        jQuery(document).ready(function () {
            $('#show_products').change(function () {
                var categorie = $(this).data('id');
                var checked_val = $(this).is(':checked') ? 1 : 0;
                console.log(categorie);
                $.ajax({
                    type: "GET", url: '{{ path('dashboard_sc2_show_products') }}',
                    data: {categorie : categorie, show_products : checked_val},
                    success: function(response) {
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            });
            $('#show_banners').change(function () {
                var categorie = $(this).data('id');
                var checked_val = $(this).is(':checked') ? 1 : 0;
                $.ajax({
                    type: "GET", dataType: "json", url: '{{ path('dashboard_sc2_show_banners') }}',
                    data: {categorie : categorie, show_banners : checked_val},
                    success: function(response) {
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            });
            $("#zero_config").sortable({
                placeholder: "highlight",
                items: "tr",
                cursor: 'move',
                opacity: 0.6,
                start: function (argument) {
                    $('highlight').css("width", $("#zero_config").css('width'));
                },
                update: function() {
                    var list_sorted = [];
                    $(this).find('tr').each(function( index ) {
                        if($(this).attr('data-id')){
                            list_sorted.push([$(this).attr('data-id'), index]);
                        }
                    });
                    sendOrderToServer(list_sorted);
                }
            });

            function sendOrderToServer(list_sorted) {
                var url = $("#zero_config").data('url');

                $.ajax({
                    type: "POST", dataType: "json", url: url,
                    data: {list_sorted : list_sorted},
                    success: function(response) {
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            }
            $('.addToSliderOrBannersButton').click(function () {
                var product_id = $(this).data('id');
                var product_name = $(this).data('name');
                var url = $(this).data('url');
                $.ajax({
                    type: "GET", dataType: "json", url: url,
                    data: {product_id : product_id, product_name:product_name},
                    success: function(response) {
                        $('#myModalProductSliderBanner .modal-body').html(response['modal']);
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            });

            $('#InIndex').on('change.bootstrapSwitch', function(e) {
                var id = $(this).val();
                var url = '{{path('dashboard_sc2_show_products_banners_in_index', {'id': 'valeurselectionnee'})}}';
                url = url.replace("valeurselectionnee", id);
                $.ajax({

                    url: url,
                    method: "GET",
                    error: function ()
                    {
                        console.log('erreur :(');
                    },
                    beforeSend: function ()
                    {

                    },
                    success: function (result)
                    {
                    }
                });
            });
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Demo.init(); // init demo features
            
        });
    </script>
{% endblock %}
