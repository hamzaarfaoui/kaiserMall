{% block javascripts %}
    <script type="text/javascript" src="{{ asset('spectrum/js/spectrum.js')}}"></script>
    <script>
        jQuery(document).ready(function () {
            $('#addCouleurForm').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '{{ path('dashboard_add_couleur') }}',
                    data: $("#addCouleurForm").serialize(),
                    method: "POST",
                    error: function (data) {
                        console.log('Erreur');
                    },
                    success: function (data) {
                        $('#myModaladd').modal('toggle');
                    }
                });
            });
            $('.couleur').spectrum({
                color: $(this).val(),
                showInput: true,
                className: "full-spectrum",
                showInitial: true,
                showSelectionPalette: true,
                preferredFormat: "hex",
            });
            $("#zero_config").sortable({
                items: "tr",
                cursor: 'move',
                opacity: 0.6,
                update: function() {
                    sendOrderToServer();
                }
            });

            function sendOrderToServer() {
                var limit = lengthMenuSetting,
                    page = Number(info.page+1),
                    url = $("#zero_config").data('url'),
                    data = $("#zero_config").sortable("serialize")+'&limit='+limit+'&page='+page
                ;

                $.ajax({
                    type: "POST", dataType: "json", url: url,
                    data: data,
                    success: function(response) {
                        console.log(response['listItem']);
                    }
                });
            }

            $('#InIndex').on('change.bootstrapSwitch', function(e) {
                var id = $(this).val();
