}
.slick-slider{
    padding-top: 22px;
    position: relative;
}
        .img-left-bottom {
            position: absolute;
            bottom: -20px;
            left: 34px;
          }
.price-skew {
    /* padding-left: 30px; */
    /* padding-right: 30px; */
    /* height: 61px; */
