    /* background: #fdd835; */
    /* position: absolute; */
    /* left: -25px; */
    /* top: 0;*/
}
.span-price::before,
.span-price::after {
  content: "";
  width: 4px;
  height: 100%;
  position: absolute;
  top: 0;
  left: -8px;
