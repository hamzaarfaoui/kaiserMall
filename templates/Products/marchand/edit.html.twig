            fileType: "any",
            language: 'fr',
            previewFileIcon: "<i class='glyphicon glyphicon-king'></i>",
            overwriteInitial: false,
            initialPreviewAsData: true,
            initialPreview: [
                {% for photo in product.getMediasImages() %}
                '{{ asset("uploads/products/gallery/") }}{{ photo.name }}',
                {% endfor %}
            ],
            initialPreviewFileType: 'image',
            initialPreviewConfig: [
                {% for k,photo in product.getMediasImages() %}
                    {caption: "photo{{k+1}}", url: '{{path('marchand_product_delete_image_gallery', {'id' : photo.id})}}', key: '{{k+1}}'},
                {% endfor %}
            ]
        });
        $(document).ready(function () {
            $('.couleur-radio').change(function () {
                $('.couleur-label').removeClass('couleur-label-checked');
