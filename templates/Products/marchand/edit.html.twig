{% block title %}Tableau de bord | {{product.name}}{% endblock %}
{% block body %}>
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{product.name}}</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                <div class="portlet light">
                    <!-- BEGIN PAGE BREADCRUMB -->
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <a href="{{ path('marchand_homepage') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                        </li>
                        <li class="active">
                            {{product.name}}
                            <input type="hidden" class="redirect-url" value="{{ path('marchand_stores_details',{id:product.store.id} ) }}">
                        </li>
                    </ul>
                    <!-- END PAGE BREADCRUMB -->
                    <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal form-row-seperated" action="{{ path('marchand_product_back_edit_traitement', {id:product.id}) }}" method="post" role="form" enctype="multipart/form-data">
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-basket font-green-sharp"></i>
                                    <span class="caption-subject font-green-sharp bold uppercase">
                                        {{product.name}} </span>
                                    <span class="caption-helper">Paramétres</span>
                                </div>
                                <div class="actions btn-set">
                                    <a class="btn green-haze btn-circle" href="{{ path('marchand_product_index', {id:product.store.id}) }}">
                                        <i class="fa fa-list"></i> Tous </a>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        {% if app.session.flashBag.has('success') %}
                                            <div class="alert alert-success">
                                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                {% for msg in app.session.flashBag.get('success') %}
                                                    <i class="fa fa-check"></i> {{ msg }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="tabbable">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tab_general" data-toggle="tab">
                                                Infos générale </a>
                                        </li>
                                        <li>
                                            <a href="#tab_meta" data-toggle="tab">
                                                Images </a>
                                        </li>
                                        <li>
                                            <a href="#tab_images" data-toggle="tab">
                                                Caractéristiques
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab_reviews" data-toggle="tab">
                                                Promotions
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab_keywords" data-toggle="tab">
                                                Mots clés
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content no-space">
                                        <div class="tab-pane active" id="tab_general">
                                            <div class="form-body">
                                                <h3>Infos générale</h3>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">Nom: <span class="required">
                                                                    * </span>
                                                            </label>
                                                            <div class="col-md-10">
                                                                <input type="text" class="form-control" name="nom" placeholder="" value="{{product.name}}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">Prix: <span class="required">
                                                                    * </span>
                                                            </label>
                                                            <div class="col-md-10">
                                                                <input type="number" class="form-control" name="price" placeholder="" value="{{product.price}}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label class="col-md-2 control-label">Quatité: <span class="required">
                                                                    * </span>
                                                            </label>
                                                            <div class="col-md-10">
                                                                <input type="number" class="form-control" name="qte" placeholder="" value="{{product.qte}}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                    
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label>Déscription</label>
                                                                <textarea class="form-control" rows="3" name="descriptionC">{{product.content}}</textarea>
                                                            </div>
                                                        </div>
                                                
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab_meta">
                                                <h3>Images</h3>
                                                <div class="col-md-12">
                                                    <label>Image d'ouveture</label> <br>
                                                    <div class="file-loading">
                                                        <input id="kv-explorer" class="document" name="iconeC" type="file" style="height:100px">
                                                    </div>
                                                    <br>
                                                    Autres Images <br>
                                                    <div class="file-loading">
                                                        <input id="file-3" class="document" name="images[]" type="file" style="height:100px" multiple>
                                                    </div>
                                                    <!-- The table listing the files available for upload/download -->
                                                    <table role="presentation" class="table table-striped clearfix">
                                                        <tbody class="files">
                                                        </tbody>
                                                    </table>

                                                </div>
                                        </div>
                                        <div class="tab-pane" id="tab_images">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h3>Couleur</h3>
                                                    {% for couleur in couleurs %}
                                                        <input type="radio" name="couleur" class="couleur-radio"id="couleur-{{couleur.id}}" value="{{couleur.id}}" {{product.couleur.id == couleur.id ? 'checked' : ''}}>
                                                        <label for="couleur-{{couleur.id}}" class="couleur-label  {{product.couleur.id == couleur.id ? 'couleur-label-checked' : ''}}"><div style="background-color: {{couleur.code}};height: 35px;width: 35px;"></div></label>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                            <h3>Caractéristiques</h3>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="row">
                                                        {% for caracteristique in caracteristiques %}
                                                            <div class="col-md-3">
                                                                <h5>{{caracteristique.name}}</h5>
                                                                {% for valeur in caracteristique.valeurs %}
                                                                    <div class="form-group">

                                                                        <input id="{{valeur.id}}" type="checkbox" name="valeurs[]" value="{{valeur.id}}" {% for val in product.valeurs %}{{val.id==valeur.id?'checked="true"':''}}{% endfor %}>
                                                                        <label for="{{valeur.id}}">{{valeur.name}}</label>
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab_reviews">
                                            <h3>Promotion</h3>
                                            <div id="phones">
                                                <div class="blocPhone">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <input type="hidden" name="promotion" value="{{promotion?promotion.id:''}}">
                                                        Début <br>
                                                        <input type="date" id="from" class="form-control" name="datedeb" placeholder="Date de début" value="{{promotion?promotion.debut|date('Y-m-d'):''}}">
                                                    </div>
                                                    <div class="col-md-4">
                                                        Fin <br>
                                                        <input type="date" id="to" class="form-control" name="datefin" placeholder="Date de fin" value="{{promotion?promotion.fin|date('Y-m-d'):''}}">
                                                    </div>
                                                    <div class="col-md-4">
                                                        Montant<br>
                                                        <input type="number" class="form-control" name="fixe" placeholder="Montant" value="{{promotion?promotion.fixe:''}}">
                                                    </div>
                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab_keywords">
                                            <h3>Mots clés</h3>
                                            <input id="tags_1" type="text" class="form-control tags" name="keywords" value="{% for keyword in product.keywords %}{{ keyword.name }}{% if(keyword != product.keywords|last) %},{% endif %}{% endfor %}"/>
                                            
                                        </div>
                                    </div>
                                </div>
                                                    <br>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
{% endblock %}
