{% block title %}Tableau de bord | Banniére{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{ banner.id }} <small>Détails</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_banners_index') }}">Catégories</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="#">{{ banner.id }}</a>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                {{ banner.id }}
                            </div>
                            <div class="tools">
                                <a href="{{ path('dashboard_sc2_banners', {id : banner.sousCategories.id}) }}" style="color: #FFF;font-size: 14px;" title="Tous les banniéres">Catégorie
                                </a>
                                <a href="{{ path('dashboard_banners_index') }}" style="color: #FFF;font-size: 14px;" title="Tous les banniéres">
                                    <i class="fa fa-list-ul"></i> Tous
                                </a>
                                <a href="{{ path('dashboard_banners_edit', {id : banner.id}) }}" style="color: #FFF;font-size: 14px;" title="Modifier">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <img src="{{ asset('/uploads/banners/') }}{{ banner.image }}" style="width: 100%;height: 250px;">
                                </div>
                            </div>
                            <div class="row">
                                    <div class="col-md-12">
                                        <hr>
                                        <h3>Produits</h3>
                                        <table class="table table-striped table-hover" id="zero_config" data-url="{{ path('dashboard_product_order_in_list') }}">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        image
                                                    </th>
                                                    <th>
                                                        Nom
                                                    </th>
                                                    <th>
                                                        Prix
                                                    </th>
                                                    <th>
                                                        Prix en promotion
                                                    </th>
                                                    <th>
                                                        matchand
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for produit in products %}
                                                    <tr id="listItem_{{ produit.id }}" data-id="{{ produit.id }}">
                                                        <td><img src="{{ asset('uploads/products/images/') }}{{ produit.image }}" width="100" height="80"></td>
                                                        <td>{{produit.name_product}}</td>
                                                        <td>{{produit.price}} TND </td>
                                                        <td>{{produit.pricePromotion?produit.pricePromotion~' TND':'-'}}</td>
                                                        <td>{{produit.store_name}}</td>
                                                        <td>
                                                            <a href="{{ path('dashboard_product_back_edit', {id : produit.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i> Fiche produit</a>
                                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal{{produit.id}}"><i class="fa fa-trash"></i> Supprimer</button>
                                                            
                                                            <!-- Modal -->
                                                            <div id="myModal{{produit.id}}" class="modal fade" role="dialog">
                                                              <div class="modal-dialog">

                                                                <!-- Modal content-->
                                                                <div class="modal-content">
                                                                  <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    <h4 class="modal-title">Suppression</h4>
                                                                  </div>
                                                                  <div class="modal-body">
                                                                    <p>Etes-vous sùre de vouloir supprimer le produit de cette liste ?</p><br>
                                                                    <div>
                                                                        <div>
                                                                            <img src="{{ asset('uploads/products/images/') }}{{ produit.image }}" class="text-right" width="100" height="80">
                                                                        </div>
                                                                        <h3>{{produit.name_product}}</h3>
                                                                    </div>
                                                                  </div>
                                                                  <div class="modal-footer">
                                                                      <a href="{{path('dashboard_product_delete_from_list', {id:produit.id})}}" class="btn btn-danger" style="float: left;">Oui</a>
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                                                  </div>
                                                                </div>

                                                              </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <br>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
