{% block title %}Tableau de bord{% endblock %}
{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Tableau de bord <small>statistiques et rapports</small></h1>
                </div>
                <!-- END PAGE TITLE -->
