{% extends "layoutAdmin.html.twig" %}
{% block stylesheets %}
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/select2/select2.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/jquery-tags-input/jquery.tagsinput.css') }}"/>
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('template/assets/global/plugins/typeahead/typeahead.css') }}">
    <!-- END PAGE LEVEL STYLES -->
    <style type="text/css">
        .highlight{
            border: 1px solid #ff0018 !important;
            background-color: #ff6c7a !important;
            position: relative;
            display: block;
            height: 97px;
        }
        .hidden{
            display: none;
        }
        td{
            text-align: center;
            vertical-align: inherit !important;
        }
        th{
            text-align: center;
        }
    </style>
{% endblock %}
{% block title %}Tableau de bord | Produits liées{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>{{ product.name }} <small>Produits lées</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <hr>
                                        <h3>Produits</h3>
                                        <input type="hidden" id="productId" value="{{product.id}}">
                                        <table class="table table-striped table-hover" id="zero_config" data-url="{{ path('dashboard_product_order_in_list') }}">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        image
                                                    </th>
                                                    <th>
                                                        Nom
                                                    </th>
                                                    <th>
                                                        Prix
                                                    </th>
                                                    <th>
                                                        Categorie
                                                    </th>
                                                    <th>
                                                        Liée
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for produit in product.store.products %}
                                                    {% if(produit.id != product.id and produit.qte > 0) %}
                                                    <tr id="products_{{ produit.id }}" data-id="{{ produit.id }}">
                                                        <td><img src="{{ asset('uploads/products/images/') }}{{ produit.image }}" width="100" height="80"></td>
                                                        <td><a href="{{path('dashboard_product_back_edit', {id : produit.id})}}">{{produit.name}}</a></td>
                                                        <td>{% if(produit.pricePromotion and produit.price > produit.pricePromotion) %}<del>{{produit.price}} TND</del> - {{produit.pricePromotion}} TND{% else %}{{produit.price}} TND{% endif %} </td>
                                                        <td>{{produit.sousCategorie.name}}</td>
                                                        <td>
                                                            <input type="checkbox" class="liee" value="{{produit.id}}" {% if produit.id in productsLiee %} checked {% endif %}>
                                                        </td>
                                                    </tr>
                                                    {% endif %}
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- Modal -->
    <div id="myModalProductSliderBanner" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Ajout du produit dans slider ou bannière</h4>
          </div>
          <div class="modal-body">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
          </div>
        </div>

      </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}
    
    <script>
        jQuery(document).ready(function () {
            $("#zero_config").sortable({
                placeholder: "highlight",
                items: "tr",
                cursor: 'move',
                opacity: 0.6,
                start: function (argument) {
                    $('highlight').css("width", $("#zero_config").css('width'));
                },
                update: function() {
                    var list_sorted = [];
                    $(this).find('tr').each(function( index ) {
                        if($(this).attr('data-id')){
                            list_sorted.push([$(this).attr('data-id'), index]);
                        }
                    });
                    console.log(list_sorted);
                    sendOrderToServer(list_sorted);
                }
            });

            function sendOrderToServer(list_sorted) {
                var url = $("#zero_config").data('url');

                $.ajax({
                    type: "POST", dataType: "json", url: url,
                    data: {list_sorted : list_sorted},
                    success: function(response) {
                        console.log(response['message']);
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            }
            $('.liee').change(function(){
                var main = $('#productId').val();
                var liee = $(this).val();
                if ($(this).prop('checked')) {
                    addRemoveLiee(main, liee, 'add');
                }else{
                    addRemoveLiee(main, liee, 'remove');
                }
            });
            function addRemoveLiee(main, liee, action) {
                var url = "{{path('dashboard_product_add_remove_liees')}}";

                $.ajax({
                    type: "POST", dataType: "json", url: url,
                    data: {main:main, liee:liee, action:action},
                    success: function(response) {
                        console.log(response['message']);
                    },error: function(response) {
                        console.log('erreur');
                    }
                });
            }
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Demo.init(); // init demo features
            
        });
    </script>
{% endblock %}
