{% block title %}Tableau de bord | Nouvelle banniére{% endblock %}
{% block body %}>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <!-- BEGIN PAGE HEAD -->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Banniéres <small>Ajout</small></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD -->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('backoffice_homepage') }}">Tableau de bord</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('dashboard_banners_index') }}">Banniéres</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    Nouvelle banniére
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box green-haze">
                        <div class="portlet-title">
                            <div class="caption">
                                Nouvelle banniére
                            </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if app.session.flashBag.has('success') %}
                                        <div class="alert alert-success">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {% for msg in app.session.flashBag.get('success') %}
                                                <i class="fa fa-check"></i> {{ msg }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <form action="{{ path('dashboard_banners_edit_traitement', {id : banner.id}) }}" method="post" role="form" enctype="multipart/form-data">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Titre</label>
                                                <input type="text" class="form-control" name="titre" value="{{banner.productsList.name}}">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="control-label col-md-4">Début</label>
                                            <input type="datetime-local" id="from" class="form-control" name="datedebut" placeholder="Date de début" value="{{banner.debut|date('Y-m-d H:i')}}">
                                        </div>
                                        <div class="col-md-4">
                                            <label class="control-label col-md-4">Fin</label>
                                            <input type="datetime-local" id="to" class="form-control" name="datefin" placeholder="Date de fin" value="{{banner.fin|date('Y-m-d H:i')}}">
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <br>
                                                <label class="control-label col-md-3">Status</label>
                                                <input type="checkbox" checked class="make-switch" name="status" data-size="small">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <br>
                                                <label class="control-label col-md-3">Couleur</label>
                                                <input type="text" name="couleur" class="couleur" id="newcolor" value="{{banner.productsList.couleur}}">
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-12">
                                            <label>Image</label> <br>
                                            <div class="file-loading">
                                                <input id="kv-explorer" type="file" name="image" multiple="false">
                                            </div>
                                            
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success">Enregistrer</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}
{% block javascripts %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->

    <script type="text/javascript" src="{{ asset('spectrum/js/spectrum.js')}}"></script>
        <script type="text/javascript" src="{{ asset('template/assets/global/plugins/fuelux/js/spinner.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bootstrapFileinput/js/fileinput.js') }}"></script>
    <script src="{{ asset('bootstrapFileinput/js/locales/fr.js') }}" type="text/javascript"></script>

<script type="text/javascript" src="{{ asset('template/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('template/assets/global/plugins/jquery.input-ip-address-control-1.0.min.js') }}"></script>
<script src="{{ asset('template/assets/global/plugins/bootstrap-pwstrength/pwstrength-bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/jquery-tags-input/jquery.tagsinput.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/typeahead/handlebars.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('template/assets/global/plugins/typeahead/typeahead.bundle.min.js') }}" type="text/javascript"></script>
<script type="text/javascript" src="{{ asset('template/assets/global/plugins/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('template/assets/admin/pages/scripts/components-form-tools.js') }}"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script>
        $('.couleur').spectrum({
            color: $('.couleur').val(),
            showInput: true,
            className: "full-spectrum",
            showInitial: true,
            showSelectionPalette: true,
            preferredFormat: "hex",
        });
        $("#kv-explorer").fileinput({
            'theme': 'explorer-fa',
            'uploadUrl': '#',
            overwriteInitial: false,
            initialPreviewAsData: true,
            initialPreview: [
                "{{ asset('/uploads/banners/') }}{{ banner.image }}"
            ],
            initialPreviewConfig: [
                {caption: "banner", url: '{{path('dashboard_remove_img_from_gallery_banner', {'id' : banner.id})}}', key: '1'}
            ]
        });
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Demo.init(); // init demo features
        });
    </script>
{% endblock %}
