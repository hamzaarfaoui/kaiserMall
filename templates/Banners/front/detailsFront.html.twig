        });
        
        
        $('.couleur-radio').change(function () {
                var label = $('label[for="' + $(this).attr('id') + '"]');
                label.toggleClass('couleur-label-checked');
            });
        
    ////// Tri profuct by facteur
    $('.filter-product').change(function(){
    
        var valeur = $(this).val();
        $('.filter-product').val($(this).val());
