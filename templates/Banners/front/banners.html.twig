{% if((categorie.show_list_products == null or categorie.show_list_products == 0) and banners|length > 0) %}
<div class="section-banners">
    <!-- row -->
    <div class="row banner-items">
        {% for banner in banners %}
            <!-- banner -->
            {% set nb_banners = banners|length %}
            {% set banner_division = 12/nb_banners %}
            <div class="col-md-{{banner_division}} col-sm-6 {% if(nb_banners == 2) %}banner2-item{% endif %} {% if(nb_banners == 3) %}banner3-item{% endif %}">
                <a class="banner banner-1" href="{{ path('banner_front_details', {slug: banner.slug}) }}">
                    <img class="img-thumbnail banner-{{nb_banners}}" src="{{ asset('/uploads/banners/') }}{{ banner.image }}" alt="{{banner.name}}" style="height: 250px;">
                </a>
            </div>
            <!-- /banner -->
        {% endfor %}

    </div>
    <!-- /row -->
</div>
{% elseif(categorie.show_list_products != null and categorie.show_list_products == 1 and products|length > 0) %}
    {% set list_name = banners[0].name %}
    {% set banner = banners[0] %}
    <div class="section categorie-products">
        <!-- container -->
        <div class="categorie-products-container">
           
            <!-- row -->
            <div class="row">
                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title" style="background-color: {{banner.couleur}};">
                        <h3 class="title">{{ list_name }}</h3>
                        <div class="pull-right">
							<a class="bouton-gris btn-1" href="{{ path('banner_front_details', {slug: banner.slug}) }}"><i class="fa fa-plus"></i></a>
                            <a class="bouton-gris btn-2" href="{{ path('banner_front_details', {slug: banner.slug}) }}"><i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                </div>
                <!-- section title -->



                <!-- Product Slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div id="product-slick-{{categorie.id}}" class="product-slick" style="height: 339px;">
                            {% for product in products %}
                                {% if(product.qte>0) %}
                                <!-- Product Single -->
                                <div class="product product-single {{product.pricePromotion and product.pricePromotion<product.price?'product-hot-promotion':'product-hot'}}" style="height: 339px;">
                                    <div class="product-thumb">
                                        <div class="product-label">
                                            {% if(product.createdAt != null) %}
                                            {% set today = "now"|date("now") %}
                                            {% set difference = date(today).diff(date(product.createdAt|date('d/m/Y'))) %}
                                            {{difference.days < 7?'<span>New </span>':''}}
                                            {% endif %}
                                            {% if(product.pricePromotion and product.pricePromotion<product.price) %}
                                                <span class="sale">
                                                    {% set difference = product.price - product.pricePromotion %}
                                                    {% set pourcentage = (difference/product.price)*100 %}
                                                    -{{pourcentage|round}}%
                                                </span>
                                            {% endif %}
                                        </div>
                                        <a href="{{ path('product_page', {slug:product.slug}) }}" class="main-btn quick-view"> DÃ©tails</a>
                                        <img src="{{ asset('uploads/products/images/') }}{{ product.image }}" alt="">
                                    </div>
                                    <div class="product-body">
                                        {% if(product.pricePromotion and product.pricePromotion<product.price) %}
                                            <h3 class="product-price">{{product.pricePromotion}} TND<del class="product-old-price">  {{product.price}} TND</del></h3>
                                        {% else %}
                                            <h3 class="product-price">{{product.price}} TND</h3>
                                        {% endif %}
                                        {#<div class="product-rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-o empty"></i>
                                        </div>#}
                                        <h2 class="product-name"><a href="#">{{ product.name }}</a></h2>
                                        {#<div class="product-btns text-center">
                                            {% if is_granted('AUTHENTIFICATED_FULLY') %}
                                            <button class="main-btn icon-btn add-to-favoris" data-id="{{product.id}}"><i class="fa fa-heart"></i></button>
                                            {% endif %}
                                            <button title="Ajouter au panier" class="primary-btn add-to-cart" data-id="{{product.id}}"><i class="fa fa-plus"></i> <i class="fa fa-shopping-cart"></i></button>
                                        </div>#}
                                    </div>
                                </div>
                                <!-- /Product Single -->
                                {% endif %}
                            {% endfor %}
                            
                        </div>
                    </div>
                </div>
                <!-- /Product Slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
{% endif %}